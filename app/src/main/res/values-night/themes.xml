<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">@color/blackYP</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/blackYP</item>
        <item name="android:iconTint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:colorPrimaryDark">@color/blackYP</item>
    </style>

    <style name="Main">
        <item name="android:background">@color/blackYP</item>
    </style>

    <style name="Settings" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/blackYP</item>
        <item name="android:background">@color/blackYP</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:iconTint">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="tint">@color/white</item>
    </style>


    <style name="Search" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/blackYP</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blackYP</item> <!-- Цвет фона всего экрана при темной теме -->
        <item name="editTextStyle">@style/SearchEditText.Dark</item> <!-- Используется стиль для поля ввода при темной теме -->
        <item name="searchFieldBackground">@drawable/rounded_edit_text_dark</item> <!-- Используется файл формы для темной темы -->
        <item name="searchIconTint">@color/white</item> <!-- Цвет иконок для темной темы -->
        <item name="searchTextColor">@color/white</item> <!-- Цвет текста в поле поиска для темной темы -->
        <item name="searchHintTextColor">@color/white</item> <!-- Цвет подсказки в поле поиска для темной темы -->
    </style>


<style name="search_form" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:background">@color/white</item>
<item name="android:iconTint">@color/blackYP</item>
</style>


</resources>