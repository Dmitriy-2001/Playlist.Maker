  <resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">@color/blackYP</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/blackYP</item>
        <item name="android:iconTint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:colorPrimaryDark">@color/blackYP</item>
        <item name="vector_color">@color/white</item>
        <item name="blackWhite">@color/white</item>
        <item name="whiteBlack">@color/blackYP</item>
        <item name="grayWhite">@color/white</item>
    </style>

    <style name="Main">
        <item name="android:background">@color/blackYP</item>
    </style>

      <style name="SearchMain" parent="Theme.Material3.DayNight.NoActionBar">
          <item name="android:background">@color/blackYP</item>
          <item name="blackWhite">@color/white</item>
          <item name="whiteBlack">@color/blackYP</item>
      </style>

    <style name="Settings" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/blackYP</item>
        <item name="android:background">@color/blackYP</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:iconTint">@color/white</item>
        <item name="textColor">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="switchTrackColor">@color/gray</item>
        <item name="blackWhite">@color/white</item>
        <item name="switchThumbColor">@color/blue</item>
        <item name="grayWhite">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="Search" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/blackYP</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:background">@color/blackYP</item> <!-- Цвет фона всего экрана при темной теме -->
         <!-- Используется стиль для поля ввода при темной теме -->
        <item name="searchFieldBackground">@color/white</item> <!-- Используется файл формы для темной темы -->
        <item name="searchIconTint">@color/blackYP</item> <!-- Цвет иконок для темной темы -->
        <item name="searchTextColor">@color/blackYP</item> <!-- Цвет текста в поле поиска для темной темы -->
        <item name="searchHintTextColor">@color/blackYP</item> <!-- Цвет подсказки в поле поиска для темной темы -->
    </style>


      <style name="AddFont" parent="Theme.Material3.DayNight.NoActionBar">
          <item name="android:textColor">@color/white</item> <!-- Белый цвет текста -->
          <item name="android:tint">@color/white</item> <!-- Белый цвет иконки -->
          <item name="android:textSize">@dimen/small_text</item>
      </style>



      <style name="ImageViewToolbarStyle">
          <item name="android:layout_marginStart">@dimen/medium_padding</item>
          <item name="android:layout_marginTop">@dimen/medium_padding</item>
          <item name="tint">@color/white</item>
      </style>

      <style name="TextViewToolbarStyle">
          <item name="android:layout_marginStart">@dimen/layout_margin_start_textview_toolbar</item>
          <item name="android:layout_marginTop">@dimen/medium_padding</item>
          <item name="fontFamily">@font/ys_display_medium</item>
          <item name="android:textSize">@dimen/toolbar_text</item>
          <item name="android:textColor">@color/white</item>
      </style>

      <style name="search_form">
          <item name="tint">@color/blackYP</item>
          <item name="android:textColorHint">@color/blackYP</item>
          <item name="android:backgroundTint">@color/white</item>
          <item name="android:textColor">@color/blackYP</item>
          <item name="android:drawableTint">@color/blackYP</item>
          <item name="android:textSize">@dimen/text</item>
          <item name="android:fontFamily">@font/ys_display_regular</item>
          <item name="android:colorControlActivated">@color/blue</item>
      </style>

      <style name="place_holder">
          <item name="android:textColor">@color/white</item>
          <item name="android:textSize">@dimen/text</item>
          <item name="android:fontFamily">@font/ys_display_regular</item>
      </style>

      <style name="button_reload">
          <item name="android:textColor">@color/blackYP</item>
          <item name="android:backgroundTint">@color/white</item>
          <item name="android:fontFamily">@font/ys_display_regular</item>
      </style>

      <style name="holder_text">
          <item name="android:textColor">@color/white</item>
          <item name="android:fontFamily">@font/ys_display_medium</item>
      </style>

      <style name="MedialibraryTableoutStyle">
          <item name="tabTextColor">@color/white</item>
          <item name="tabIndicatorColor">@color/white</item>
          <item name="android:background">@color/blackYP</item>
          <item name="textAllCaps">false</item>
          <item name="android:textAllCaps">false</item>
      </style>

      <style name="MedialibraryToolbarStyle">
          <item name="android:background">@color/blackYP</item>
      </style>

      <style name="BottomMenuStyle">
          <item name="itemIconTint">@color/bottom_navigation_colors</item>
          <item name="itemTextColor">@color/bottom_navigation_colors</item>
          <item name="background">@color/blackYP</item>
          <item name="alpha">1.0</item>
          <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
          <item name="itemIconSize">24dp</item>

          <item name="itemPaddingTop">8dp</item>
          <item name="itemPaddingBottom">8dp</item>
          <item name="android:fontFamily">@font/ys_display_regular</item>
          <item name="android:textSize">@dimen/menu_text</item>
      </style>

</resources>